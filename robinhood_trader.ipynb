def open_market():
    market = False
    tz = pytz.timezone('America/Los_Angeles')
    time_now = dt.datetime.now(tz).time()

    market_open = dt.time(6,0,0)
    market_close = dt.time(13,29,0)

    if time_now > market_open and time_now < market_close:
        market = True
    else:
        pass
    return market

